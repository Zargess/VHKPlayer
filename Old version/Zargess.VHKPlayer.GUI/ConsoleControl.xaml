<UserControl x:Class="Zargess.VHKPlayer.GUI.ConsoleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gui="clr-namespace:Zargess.VHKPlayer.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <gui:Terminal Grid.Row="0" x:Name="Term" FontFamily="Courier New" FontSize="12"
				IsPromptInsertedAtLaunch="False" IsSystemBeepEnabled="True"
				VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="Transparent" 
                Foreground="White" CaretBrush="Transparent" BorderThickness="0" />
        <Canvas>
            <Border x:Name="Caret" 
                Visibility="Collapsed"
                Canvas.Left="0" 
                Canvas.Top="0" 
                Width="8" 
                Height="15" 
                Background="White">
            </Border>
        </Canvas>
    </Grid>
</UserControl>
